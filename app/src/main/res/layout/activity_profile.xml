<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#BA078CF7"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Profile"
            android:textSize="50dp"
            android:textColor="#FCFFDE07"
            android:id="@+id/tv_yourprofile"
            android:layout_centerVertical="false"
            android:layout_marginLeft="70dp"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/userid"
            android:layout_below="@id/tv_yourprofile"
            />


    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B521F3E1">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Your Name:"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/et_namepro"
            android:layout_below="@id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#7AC6F8F4"
            />


        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Your Email:"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/et_namepro"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/et_emailpro"
            android:layout_below="@id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#7AC6F8F4"
            />



    </RelativeLayout>

</LinearLayout>