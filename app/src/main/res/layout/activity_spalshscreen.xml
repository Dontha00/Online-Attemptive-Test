<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SPALSHSCREEN"
    android:background="#7EC3C5D8">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textSize="12dp"
        android:textColor="#454545"
        android:gravity="center_horizontal"
        android:layout_marginLeft="175dp"
        android:layout_alignParentBottom="true"
        android:text="dontha ritesh"
        />

    <TextView
        android:id="@+id/tv_oat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OAT"
        android:layout_marginLeft="193dp"
        android:layout_marginTop="240dp"
        android:textColor="#D8FF0606"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online Aptitude Test"
        android:layout_below="@id/iv_logo"
        android:layout_marginLeft="140dp"
        android:textColor="#D8066AFF"
        />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/idea"
        android:layout_below="@+id/tv_oat"
        android:layout_centerInParent="true"
        />



</RelativeLayout>